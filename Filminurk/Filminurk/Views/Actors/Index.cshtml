@model IEnumerable<Filminurk.Models.Actors.ActorsIndexViewModel>

@{
	int rowNumber = 1;
}

<div>
	<a asp-action="Create" asp-controller="Actors" type="submit" class="btn btn-primary">Add Actor</a>
</div>
<div class="h1">
	Näitlejad
</div>
<form method="get">
	<table class="table table-hover">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Nimi</th>
				<th scope="col">Perekonnanimi</th>
				<th scope="col">Vanus</th>
				<th scope="col">Riik</th>
				<th scope="col">Sugu</th>
				<th scope="col">Tööriistad</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var actor in Model)
			{
				<tr>
					<td>@rowNumber</td>
					<td>@actor.FirstName</td>
					<td>@actor.LastName</td>
					<td>@actor.Age</td>
					<td>@actor.CountryOfOrigin</td>
					<td>@actor.Gender</td>
					<td>
						<a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Info</a>
						<a asp-action="Update" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-primary">Uuenda</a>
						<a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.ActorID" class="btn btn-outline-danger">Eemalda</a>
					</td>
				</tr>
				rowNumber += 1;
			}
		</tbody>
	</table>
</form>